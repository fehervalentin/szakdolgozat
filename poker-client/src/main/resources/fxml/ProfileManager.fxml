<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="hu.elte.bfw1p6.poker.client.controller.ProfileManagerController">
	<GridPane alignment="center" hgap="10" vgap="10">
		<Label fx:id="usernameLabel" GridPane.columnIndex="0"
			styleClass="header-text" GridPane.rowIndex="7" GridPane.columnSpan="3"
			text="<Username>" alignment="center" />
		<Label fx:id="regDateLabel" GridPane.columnIndex="0" styleClass="header-text"
			GridPane.rowIndex="8" GridPane.columnSpan="3" text="<registration date>"
			alignment="center" />
		<Label fx:id="changePasswordLabel" GridPane.columnIndex="0"
			styleClass="header-text" GridPane.rowIndex="9" GridPane.columnSpan="3"
			text="Jelszó módosítása" alignment="center" />
		<PasswordField fx:id="oldPasswordField" promptText="Régi jelszó"
			GridPane.columnSpan="2" GridPane.columnIndex="1" GridPane.rowIndex="10" />
		<PasswordField fx:id="newPasswordField" promptText="Új jelszó"
			GridPane.columnSpan="2" GridPane.columnIndex="1" GridPane.rowIndex="12" />
		<PasswordField fx:id="rePasswordField" promptText="Új jelszó újra"
			GridPane.columnSpan="2" GridPane.columnIndex="1" GridPane.rowIndex="13" />

		<Button fx:id="modifyButton" text="Módosít" onAction="#handleModify"
			styleClass="rich-blue" GridPane.columnIndex="1" GridPane.rowIndex="14" />
		<Button fx:id="backButton" text="Vissza" onAction="#handleBack"
			styleClass="rich-blue" GridPane.columnIndex="2" GridPane.rowIndex="14" />
	</GridPane>
</AnchorPane>