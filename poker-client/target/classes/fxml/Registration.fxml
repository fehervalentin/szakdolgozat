<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="hu.elte.bfw1p6.poker.client.controller.RegistrationController">
	<GridPane alignment="center" hgap="10" vgap="10">
		<Label fx:id="registrationLabel" GridPane.columnIndex="0" styleClass="valami"
		GridPane.rowIndex="0" GridPane.columnSpan="3" text="Regisztráció"
		alignment="center" />

		<TextField fx:id="usernameField" GridPane.columnIndex="1" promptText="Felhasználónév" GridPane.columnSpan="2"
			GridPane.rowIndex="9" />
		<PasswordField fx:id="passwordField" promptText="Jelszó" GridPane.columnSpan="2"
			GridPane.columnIndex="1" GridPane.rowIndex="10" />
		<Label fx:id="rePasswordLabel" GridPane.columnIndex="0"
			GridPane.rowIndex="3" text="Repeat password:" />
		<PasswordField fx:id="rePasswordField" promptText="Jelszó újra" GridPane.columnSpan="2"
			GridPane.columnIndex="1" GridPane.rowIndex="11" />

		<Button fx:id="regButton" text="Regisztrálok" onAction="#handleRegistrationButton"
			styleClass="rich-blue" GridPane.columnIndex="1" GridPane.rowIndex="12" />
		<Button fx:id="backButton" text="Vissza" onAction="#goToLogin"
			styleClass="rich-blue" GridPane.columnIndex="2" GridPane.rowIndex="12" />
	</GridPane>
</AnchorPane>

