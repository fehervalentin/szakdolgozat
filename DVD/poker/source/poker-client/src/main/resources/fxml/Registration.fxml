<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="hu.elte.bfw1p6.poker.client.controller.RegistrationController">
	<GridPane alignment="center" hgap="10" vgap="10">
		<Label fx:id="registrationLabel" GridPane.columnIndex="0"
			styleClass="header-text" GridPane.rowIndex="0" GridPane.columnSpan="10"
			text="Regisztráció" alignment="center" />

		<Label fx:id="usernameLabel" GridPane.columnIndex="7"
			GridPane.rowIndex="10" styleClass="header-text2" text="Felhasználónév:" />
		<TextField fx:id="usernameField" GridPane.columnIndex="8"
			GridPane.columnSpan="2" GridPane.rowIndex="10" />

		<Label fx:id="passwordLabel" GridPane.columnIndex="7"
			styleClass="header-text2" GridPane.rowIndex="11" text="Jelszó:" />
		<PasswordField fx:id="passwordField"
			GridPane.columnSpan="2" GridPane.columnIndex="8" GridPane.rowIndex="11" />

		<Label fx:id="rePasswordLabel" GridPane.columnIndex="7"
			styleClass="header-text2" GridPane.rowIndex="12" text="Jelszó újra:" />
		<PasswordField fx:id="rePasswordField"
			GridPane.columnSpan="2" GridPane.columnIndex="8" GridPane.rowIndex="12" />

		<Button fx:id="regButton" text="Regisztrálok" onAction="#handleRegistrationButton"
			styleClass="rich-blue" GridPane.columnIndex="8" GridPane.rowIndex="13" />
		<Button fx:id="backButton" text="Vissza" onAction="#navigateToLoginForm"
			styleClass="rich-blue" GridPane.columnIndex="9" GridPane.rowIndex="13" />
	</GridPane>
</AnchorPane>

