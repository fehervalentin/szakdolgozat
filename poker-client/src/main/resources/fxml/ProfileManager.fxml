<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="hu.elte.bfw1p6.poker.client.controller.ProfileManagerController">
	<GridPane alignment="center" hgap="10" vgap="10">
		<Label fx:id="usernameLabel" GridPane.columnIndex="0"
			styleClass="header-text" GridPane.rowIndex="1" GridPane.columnSpan="3"
			alignment="center" />
		<Label fx:id="regDateLabel2" GridPane.columnIndex="0" styleClass="header-text2"
			GridPane.rowIndex="2" GridPane.columnSpan="1" text="Registráció dátuma: "
			alignment="center" />
		<Label fx:id="regDateLabel" GridPane.columnIndex="1" styleClass="header-text2"
			GridPane.rowIndex="2" GridPane.columnSpan="3"
			alignment="center" />
		<Label fx:id="changePasswordLabel" GridPane.columnIndex="0"
			styleClass="header-text" GridPane.rowIndex="3" GridPane.columnSpan="3"
			alignment="center" text="Jelszó cseréje" />
		<Label fx:id="oldPasswordLabel" GridPane.columnIndex="0"
			styleClass="header-text2" GridPane.rowIndex="4" GridPane.columnSpan="1"
			alignment="center" text="Jelszó: " />
		<Label fx:id="newPasswordLabel" GridPane.columnIndex="0"
			styleClass="header-text2" GridPane.rowIndex="5" GridPane.columnSpan="1"
			alignment="center" text="Új jelszó: " />
		<Label fx:id="reNewPasswordLabel" GridPane.columnIndex="0"
			styleClass="header-text2" GridPane.rowIndex="6" GridPane.columnSpan="1"
			alignment="center" text="Új jelszó újra: " />
		<PasswordField fx:id="oldPasswordField" promptText="Régi jelszó"
			GridPane.columnSpan="2" GridPane.columnIndex="1" GridPane.rowIndex="4" />
		<PasswordField fx:id="newPasswordField" promptText="Új jelszó"
			GridPane.columnSpan="2" GridPane.columnIndex="1" GridPane.rowIndex="5" />
		<PasswordField fx:id="rePasswordField" promptText="Új jelszó újra"
			GridPane.columnSpan="2" GridPane.columnIndex="1" GridPane.rowIndex="6" />

		<Button fx:id="modifyButton" text="Módosít" onAction="#handleModify"
			styleClass="rich-blue" GridPane.columnIndex="1" GridPane.rowIndex="7" />
		<Button fx:id="backButton" text="Vissza" onAction="#handleBack"
			styleClass="rich-blue" GridPane.columnIndex="2" GridPane.rowIndex="7" />
	</GridPane>
</AnchorPane>