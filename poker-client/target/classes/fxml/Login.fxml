<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="hu.elte.bfw1p6.poker.client.controller.LoginController">
	<children>
		<GridPane alignment="center" hgap="10" vgap="10">
			<Label fx:id="pokerLabel" GridPane.columnIndex="0"
				GridPane.rowIndex="0" GridPane.columnSpan="20" text="Bejelentkezés"
				styleClass="header-text" alignment="center" />
			<TextField fx:id="usernameField" GridPane.columnIndex="8"
				promptText="Felhasználónév" GridPane.columnSpan="2"
				GridPane.rowIndex="10" />
			<PasswordField fx:id="passwordField" promptText="Jelszó"
				GridPane.columnSpan="2" GridPane.columnIndex="8" GridPane.rowIndex="11" />
			<Button fx:id="loginButton" text="Bejelentkezés" onAction="#loginHandler"
				styleClass="rich-blue" GridPane.columnIndex="8" GridPane.rowIndex="12" />
			<Button fx:id="loginButton" text="Regisztráció" onAction="#goToReg"
				styleClass="rich-blue" GridPane.columnIndex="9" GridPane.rowIndex="12" />
<!-- 			<FieldWithLabel GridPane.columnIndex="9" labeltext="Valami" -->
<!-- 				GridPane.rowIndex="13"></FieldWithLabel> -->
		</GridPane>
	</children>
</AnchorPane>

