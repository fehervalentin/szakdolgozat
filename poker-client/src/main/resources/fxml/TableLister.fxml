<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.cell.*?> 
<?import javafx.collections.*?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import hu.elte.bfw1p6.poker.model.entity.PokerTable?>
<?import javafx.scene.control.Button?>


<GridPane alignment="CENTER" hgap="10.0" vgap="10.0"
	xmlns:fx="http://javafx.com/fxml" fx:controller="hu.elte.bfw1p6.poker.client.controller.TableListerController">
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
	<Label style="-fx-font: NORMAL 20 Tahoma;" text="Játékszerverek"
		GridPane.columnIndex="0" GridPane.rowIndex="0">
	</Label>
	<TableView fx:id="tableView" GridPane.columnIndex="0"
		GridPane.rowIndex="1">
		<columns>
			<TableColumn prefWidth="100.0" text="Játékszerver neve"
				fx:id="tableName" />
			<TableColumn prefWidth="100.0" text="Játék stílusa"
				fx:id="pokerType" />
			<TableColumn prefWidth="100.0" text="Maximum gondolkodás idő"
				fx:id="maxTime" />
			<TableColumn prefWidth="100.0" text="Játékosok maximum száma"
				fx:id="maxPlayers" />
			<TableColumn prefWidth="100.0" text="Alaptét" fx:id="defaultPot" />
			<TableColumn prefWidth="100.0" text="Limit" fx:id="maxBet" />
		</columns>
	</TableView>
	<Button fx:id="connectButton" text="Csatlakozás" onAction="#handleConnectToTable"
		GridPane.columnIndex="1" GridPane.rowIndex="1" />
	<Button fx:id="profileManagerButton" text="Profil megtekintése"
		onAction="#handleProfileManager" GridPane.columnIndex="1" GridPane.rowIndex="2" />
	<Button fx:id="createTableButton" text="Kijelentkezés" onAction="#handleLogout"
		GridPane.columnIndex="1" GridPane.rowIndex="3" />
	<Button fx:id="createTableButton" text="Új tábla létrehozása"
		onAction="#handleCreateTable" GridPane.columnIndex="1"
		GridPane.rowIndex="4" />
	<Button fx:id="modifyTableButton" text="Tábla módosítása"
		onAction="#handleModifyTable" GridPane.columnIndex="1"
		GridPane.rowIndex="5" />
	<Button fx:id="deleteTableButton" text="Asztal törlése"
		onAction="#handleDeleteTable" GridPane.columnIndex="1"
		GridPane.rowIndex="6" />
		<Button fx:id="viewUsersbutton" text="Userek megtekintése"
		onAction="#handleViewUsers" GridPane.columnIndex="1"
		GridPane.rowIndex="7" />
</GridPane>