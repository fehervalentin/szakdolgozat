<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>

<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="hu.elte.bfw1p6.poker.client.controller.ProfileManagerController">
	<GridPane alignment="center" hgap="10" vgap="10">
		<Label fx:id="usernameLabel" GridPane.columnIndex="0"
			styleClass="header-text2" GridPane.rowIndex="1" text="Név:" />
		<TextField fx:id="userNameField" GridPane.columnIndex="1" GridPane.columnSpan="2"
			GridPane.rowIndex="1" disable="true" opacity="1" />

		<Label fx:id="regDateLabel" GridPane.columnIndex="0" styleClass="header-text2"
			GridPane.rowIndex="2" GridPane.columnSpan="1" text="Regisztráció dátuma:" />
		<TextField fx:id="regDateField" GridPane.columnIndex="1" GridPane.columnSpan="2"
			GridPane.rowIndex="2" disable="true" opacity="1" />

		<Label fx:id="balanceLabel" GridPane.columnIndex="0" styleClass="header-text2"
			GridPane.rowIndex="3" text="Egyenleg:" />
		<TextField fx:id="balanceField" GridPane.columnIndex="1" GridPane.columnSpan="2"
			GridPane.rowIndex="3" disable="true" opacity="1" />

		<Label fx:id="balanceLabel" GridPane.columnIndex="0" styleClass="header-text2"
			GridPane.rowIndex="4" text="Admin jog:" />
		<CheckBox fx:id="adminCheckBox" disable="true" opacity="1" GridPane.columnSpan="2"
			GridPane.columnIndex="1" GridPane.rowIndex="4" />

		<Label fx:id="oldPasswordLabel" GridPane.columnIndex="0"
			styleClass="header-text2" GridPane.rowIndex="5"
			alignment="center" text="Jelszó: " />
		<PasswordField fx:id="oldPasswordField"
			GridPane.columnSpan="2" GridPane.columnIndex="1" GridPane.rowIndex="5" />

		<Label fx:id="newPasswordLabel" GridPane.columnIndex="0"
			styleClass="header-text2" GridPane.rowIndex="6"
			alignment="center" text="Új jelszó: " />
		<PasswordField fx:id="newPasswordField"
			GridPane.columnSpan="2" GridPane.columnIndex="1" GridPane.rowIndex="6" />

		<Label fx:id="reNewPasswordLabel" GridPane.columnIndex="0"
			styleClass="header-text2" GridPane.rowIndex="7"
			alignment="center" text="Új jelszó újra: " />
		<PasswordField fx:id="rePasswordField"
			GridPane.columnSpan="2" GridPane.columnIndex="1" GridPane.rowIndex="7" />

		<Button fx:id="modifyButton" text="Módosít" onAction="#handleModify"
			styleClass="rich-blue" GridPane.columnIndex="1" GridPane.rowIndex="8" />
		<Button fx:id="backButton" text="Vissza" onAction="#handleBack"
			styleClass="rich-blue" GridPane.columnIndex="2" GridPane.rowIndex="8" />
	</GridPane>
</AnchorPane>