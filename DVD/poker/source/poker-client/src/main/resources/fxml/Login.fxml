<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="hu.elte.bfw1p6.poker.client.controller.LoginController">
	<children>
		<GridPane alignment="center" hgap="10" vgap="10">
			<Label fx:id="pokerLabel" GridPane.columnIndex="0"
				GridPane.rowIndex="0" GridPane.columnSpan="20" text="Bejelentkezés"
				styleClass="header-text" alignment="center" />

			<Label fx:id="usernameLabel" GridPane.columnIndex="7"
				GridPane.rowIndex="10" styleClass="header-text2" text="Felhasználónév:" />
			<TextField fx:id="usernameField" GridPane.columnIndex="8"
				GridPane.columnSpan="2" GridPane.rowIndex="10" />

			<Label fx:id="passwordLabel" GridPane.columnIndex="7"
				GridPane.rowIndex="11" styleClass="header-text2" text="Jelszó:" />
			<PasswordField fx:id="passwordField"
				GridPane.columnSpan="2" GridPane.columnIndex="8" GridPane.rowIndex="11" />
			<Button fx:id="loginButton" text="Bejelentkezés" onAction="#loginHandler"
				styleClass="rich-blue" GridPane.columnIndex="8" GridPane.rowIndex="12" />
			<Button fx:id="loginButton" text="Regisztráció" onAction="#navigateToRegistrationForm"
				styleClass="rich-blue" GridPane.columnIndex="9" GridPane.rowIndex="12" />
		</GridPane>
	</children>
</AnchorPane>

